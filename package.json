{
  "name": "pwa-proto",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "lint": "stylelint source/scss/**/*.scss",
    "clean": "rimraf dist/css/*, dist/js/*",
    "prebuild": "npm run clean",
    "build": "npm run sass:build && npm run build:bundle && npm run sw",
    "sass:build": "node-sass source/scss/ -o dist/css/ --output-style uncompressed",
    "sass:watch": "npm run sass:build -- -w",
    "browsersync": "browser-sync start --files \"dist/css/*.css, *.html, dist/js/*.js\" --server",
    "start": "parallelshell \"npm run sass:build\" \"npm run sass:watch\" \"npm run watch:bundle\" \"npm run browsersync\"",
    "build:bundle": "browserify source/js/app.js -o dist/js/bundle.js -t [ babelify ]",
    "watch:bundle": "watchify source/js/app.js -o dist/js/bundle.js -t [ babelify ]",
    "sw": "sw-precache --config=sw-precache-config.js --verbose"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babelify": "^8.0.0",
    "browser-env": "3.2.4",
    "browser-sync": "^2.23.5",
    "browserify": "^15.2.0",
    "eslint": "^4.15.0",
    "eslint-config-vi": "^8.3.0",
    "node-sass": "^4.5.2",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.1",
    "stylelint": "^8.4.0",
    "stylelint-config-vi": "^1.4.1",
    "sw-precache": "^5.2.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "highcharts": "^6.0.4",
    "socket.io": "^2.0.4",
    "vue": "^2.5.13",
    "vuex": "^3.0.1"
  }
}
